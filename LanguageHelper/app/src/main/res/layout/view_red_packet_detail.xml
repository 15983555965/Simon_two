<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_red_packet_detail_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/icon_red_packet_detail_top" />

        <ImageView
            android:id="@+id/iv_red_packet_detail_headimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@color/transparent_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_red_packet_detail_headimg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="simon"
            android:textColor="#0E0E0E"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="恭喜发财，大吉大利"
        android:layout_marginTop="5dp"
        android:textColor="#A3A3A3"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.01"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/uikit_black"
        android:textSize="50sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5675B2"
        android:textSize="10sp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:text="已存入您的福袋中，可直接提现"/>
</LinearLayout>